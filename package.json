{
  "name": "clifford",
  "version": "1.0.0",
  "description": "Clifford: The Recursive Implementation Agent",
  "main": "dist/index.js",
  "bin": {
    "clifford": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --external @opentui/core --external @opentui/core-win32-x64 --external @opentui/core-linux-x64",
    "start": "bun run dist/index.js",
    "dev": "bun run src/index.ts",
    "lint": "eslint .",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joelstransky/clifford.git"
  },
  "keywords": [
    "cli",
    "agent",
    "recursive",
    "sprint"
  ],
  "author": "Joel Stransky",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "bugs": {
    "url": "https://github.com/joelstransky/clifford/issues"
  },
  "homepage": "https://github.com/joelstransky/clifford#readme",
  "dependencies": {
    "@opentui/core": "^0.1.75",
    "axios": "^1.7.9",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.3",
    "inquirer": "^8.2.7"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "bun-types": "^1.3.8",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
